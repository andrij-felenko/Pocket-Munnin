#ifndef TRINN_STORAGE_H
#define TRINN_STORAGE_H

#include <QtCore/QSharedPointer>

namespace Trinn {
    class Storage;
    typedef QSharedPointer <Storage> StoragePtr;

    StoragePtr storage();
}

Trinn::StoragePtr trinnStorage();

class Trinn::Storage
{
public:
    explicit Storage();

    static StoragePtr instance();
};

typedef Trinn::Storage    TrinnStorage;
typedef Trinn::StoragePtr TrinnStoragePtr;

#endif
